<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<HBox fx:id="rootHBox" cache="true" cacheHint="SCALE" minHeight="-Infinity" minWidth="-Infinity" prefHeight="963.0"
      prefWidth="1650.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.polimi.ingsw.view.gui.controllers.GameInterfaceController">
    <children>
        <VBox fx:id="otherShelfVbox" minWidth="300" prefHeight="978.0" prefWidth="400.0">
            <children>
                <fx:include fx:id="otherShelf1" source="otherShelfs.fxml"/>
                <fx:include fx:id="otherShelf2" source="otherShelfs.fxml"/>
                <fx:include fx:id="otherShelf3" source="otherShelfs.fxml"/>
            </children>
        </VBox>
        <VBox fx:id="boardAndPlayer" minHeight="-Infinity" minWidth="-Infinity">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Zoom"/>
                <HBox prefHeight="26.0" prefWidth="796.0">
                    <Button text="x0.75" fx:id="x075"/>
                    <Button text="x1" fx:id="x1"/>
                    <Button text="x1.25" fx:id="x125"/>
                    <Button text="x1.5" fx:id="x150"/>
                    <Text fx:id="currentPlayer" styleClass="@current_player_font.css" text="The current player is"
                          wrappingWidth="658.0"/>
                </HBox>

                <fx:include fx:id="board" source="board.fxml"/>
                <fx:include fx:id="localPlayer" source="localPlayer.fxml"/>

            </children>
            <padding>
                <Insets top="20.0"/>
            </padding>
        </VBox>
        <VBox fx:id="chatVbox">


            <fx:include fx:id="chat" source="chat.fxml"/>


        </VBox>
    </children>
</HBox>
